<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/begraund"
        tools:context=".MainActivity">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            app:columnCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:orientation="horizontal">

            <ImageView
                android:id="@+id/button1"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button4"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button5"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button9"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button10"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button12"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button13"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button14"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button15"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button17"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button18"
                android:layout_width="93dp"
                android:layout_height="90dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button19"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button20"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button22"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />

            <ImageView
                android:id="@+id/button24"
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:clickable="true"
                app:srcCompat="@drawable/skirt" />


        </androidx.gridlayout.widget.GridLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="156dp" />

        <TextView
            android:id="@+id/lives_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rockletter_simple"
            android:text="@string/lives"
            android:textAllCaps="true"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/poinintsTextView"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/poinintsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/points"
            android:fontFamily="@font/rockletter_simple"
            android:textAllCaps="true"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lives_textView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="593dp" />

        <TextView
            android:id="@+id/button_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:fontFamily="@font/rockletter_simple"
            android:text="New game"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_exit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <TextView
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_weight="1"
            android:background="@color/onColor"
            android:fontFamily="@font/rockletter_simple"
            android:text="exit"
            android:textAllCaps="true"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_new_game"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>